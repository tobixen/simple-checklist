CHKLIST='morgenrutiner'
MUSICDIR='/home/tobias/s3/music.tobixen/checklists/'


query="select start_time,checkpoint_who,checkpoint_id,pg_sleep(extract(epoch from start_time-now()::time)) from checkpoint where start_time>now()::time and checlist='$CHKLIST' order by start_time limit 1);"
data=$(ssh srv1.bekkenstenveien53c.oslo.no psql -tc "$query")
start_time=$(echo "$data" | cut -f1 -d|)
who=$(echo "$data" | cut -f2 -d|)
what=$(echo "$data" | cut -f3 -d|)
